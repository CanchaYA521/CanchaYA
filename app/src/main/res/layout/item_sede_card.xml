<?xml version="1.0" encoding="utf-8"?>
<!-- 🆕 NUEVO: Card de sede (21 Oct 2025) -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Imagen de la sede -->
        <ImageView
            android:id="@+id/imgSede"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:contentDescription="Imagen de la sede"
            tools:src="@drawable/ic_placeholder_cancha" />

        <!-- Contenido principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header: Nombre y Estado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvNombreSede"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    tools:text="Sede Central" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipEstado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activa"
                    android:textColor="@android:color/white"
                    app:chipBackgroundColor="@color/success"
                    app:chipCornerRadius="16dp"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Dirección -->
            <TextView
                android:id="@+id/tvDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                android:textColor="#616161"
                android:drawablePadding="4dp"
                tools:text="Jr. San Fernando 1234, Nueva Cajamarca" />

            <!-- Horario -->
            <TextView
                android:id="@+id/tvHorario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:textColor="#757575"
                tools:text="⏰ 06:00 - 23:00" />

            <!-- Coordenadas -->
            <TextView
                android:id="@+id/tvCoordenadas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:textColor="#9E9E9E"
                tools:text="📍 -5.1234, -78.5678" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="#E0E0E0" />

            <!-- Información adicional -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_sports_soccer"
                    app:tint="@color/primary" />

                <TextView
                    android:id="@+id/tvCantidadCanchas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    tools:text="5 canchas" />

            </LinearLayout>

            <!-- Botones de acción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVerCanchas"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="Ver Canchas"
                    android:textSize="12sp"
                    app:icon="@drawable/ic_sports_soccer"
                    app:iconSize="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAgregarCancha"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="+ Cancha"
                    android:textSize="12sp"
                    app:icon="@drawable/ic_add"
                    app:iconSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEditar"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="Editar"
                    android:textSize="12sp"
                    app:icon="@drawable/ic_edit"
                    app:iconSize="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEliminar"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="Eliminar"
                    android:textSize="12sp"
                    android:textColor="@color/error"
                    app:icon="@drawable/ic_delete"
                    app:iconSize="16dp"
                    app:iconTint="@color/error" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
