<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardReserva"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Nombre de la cancha -->
        <TextView
            android:id="@+id/tvCanchaNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Cancha Deportiva Norte"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvEstado"
            android:layout_marginEnd="12dp" />

        <!-- Estado -->
        <TextView
            android:id="@+id/tvEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:padding="6dp"
            android:background="@drawable/rounded_background"
            tools:text="Confirmada"
            tools:textColor="@color/success"
            app:layout_constraintTop_toTopOf="@id/tvCanchaNombre"
            app:layout_constraintBottom_toBottomOf="@id/tvCanchaNombre"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvCanchaNombre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Fecha -->
        <TextView
            android:id="@+id/tvFecha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:drawablePadding="6dp"
            app:drawableStartCompat="@drawable/ic_calendar"
            app:drawableTint="@color/primary"
            tools:text="ðŸ“… 19/10/2025"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvPrecio"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp" />

        <!-- Horario -->
        <TextView
            android:id="@+id/tvHorario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:drawablePadding="6dp"
            app:drawableStartCompat="@drawable/ic_clock"
            app:drawableTint="@color/primary"
            tools:text="ðŸ•’ 14:00 - 15:00"
            app:layout_constraintTop_toBottomOf="@id/tvFecha"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvPrecio"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp" />

        <!-- Precio -->
        <TextView
            android:id="@+id/tvPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/success"
            tools:text="S/ 50.00"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintBottom_toTopOf="@id/btnCancelar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

        <!-- BotÃ³n Cancelar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelar"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:textColor="@color/error"
            app:strokeColor="@color/error"
            app:layout_constraintTop_toBottomOf="@id/tvHorario"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
