<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- AppBarLayout -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        app:elevation="4dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="Información del Sistema"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- SwipeRefreshLayout -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- ScrollView -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/contentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Información de la App -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📱 Información de la App"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:id="@+id/tvAppName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CanchayA"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvAppVersion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Versión: 1.0.0"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvAppVersionCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Build: 1"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvPackageName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="com.rojassac.canchaya"
                            android:textSize="12sp"
                            android:textColor="@color/text_tertiary"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvFechaInstalacion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Instalado: --/--/----"
                            android:textSize="12sp"
                            android:textColor="@color/text_tertiary" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Estadísticas Generales -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📊 Estadísticas Generales"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="12dp" />

                        <!-- Grid de estadísticas -->
                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:columnCount="2"
                            android:rowCount="2">

                            <!-- Usuarios -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:orientation="vertical"
                                android:padding="8dp"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tvTotalUsuarios"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="32sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/primary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Usuarios"
                                    android:textSize="14sp"
                                    android:textColor="@color/text_secondary" />

                                <TextView
                                    android:id="@+id/tvUsuariosActivos"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0 activos"
                                    android:textSize="12sp"
                                    android:textColor="@color/success" />

                                <TextView
                                    android:id="@+id/tvAdministradores"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0 admins"
                                    android:textSize="12sp"
                                    android:textColor="@color/info" />

                            </LinearLayout>

                            <!-- Sedes -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:orientation="vertical"
                                android:padding="8dp"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tvTotalSedes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="32sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/primary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sedes"
                                    android:textSize="14sp"
                                    android:textColor="@color/text_secondary" />

                                <TextView
                                    android:id="@+id/tvSedesActivas"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0 activas"
                                    android:textSize="12sp"
                                    android:textColor="@color/success" />

                            </LinearLayout>

                            <!-- Reservas -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:orientation="vertical"
                                android:padding="8dp"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tvTotalReservas"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="32sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/primary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Reservas"
                                    android:textSize="14sp"
                                    android:textColor="@color/text_secondary" />

                                <TextView
                                    android:id="@+id/tvReservasHoy"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0 hoy"
                                    android:textSize="12sp"
                                    android:textColor="@color/warning" />

                            </LinearLayout>

                            <!-- Suscripciones -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:orientation="vertical"
                                android:padding="8dp"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tvTotalSuscripciones"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="32sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/primary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Suscripciones"
                                    android:textSize="14sp"
                                    android:textColor="@color/text_secondary" />

                                <TextView
                                    android:id="@+id/tvSuscripcionesActivas"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0 activas"
                                    android:textSize="12sp"
                                    android:textColor="@color/success" />

                            </LinearLayout>

                        </GridLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Información del Dispositivo -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📱 Información del Dispositivo"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:id="@+id/tvAndroidVersion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Android --"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvModelo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Modelo: --"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvArquitectura"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Arquitectura: --"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- ProgressBar centrado -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
