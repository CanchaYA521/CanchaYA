<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_green"
            app:navigationIcon="@drawable/ic_back"
            app:title="Detalle Cancha"
            app:titleTextColor="@color/white" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Imagen de portada -->
            <ImageView
                android:id="@+id/ivPortada"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <!-- Contenido -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Nombre de la cancha -->
                <TextView
                    android:id="@+id/tvNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancha El Gol"
                    android:textColor="@color/gray_dark"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Calificación -->
                <TextView
                    android:id="@+id/tvCalificacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="4.5 ⭐ (120 reseñas)"
                    android:textColor="@color/gray_medium"
                    android:textSize="14sp" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="16dp"
                    android:background="@color/gray_medium" />

                <!-- Precio -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_money"
                        android:tint="@color/primary_green" />

                    <TextView
                        android:id="@+id/tvPrecio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="S/ 60/hora"
                        android:textColor="@color/gray_dark"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Dirección -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_location"
                        android:tint="@color/primary_green" />

                    <TextView
                        android:id="@+id/tvDireccion"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Av. Principal 123, San Borja"
                        android:textColor="@color/gray_dark"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Horario -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calendar"
                        android:tint="@color/primary_green" />

                    <TextView
                        android:id="@+id/tvHorario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Horario: 08:00 - 22:00"
                        android:textColor="@color/gray_dark"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="16dp"
                    android:background="@color/gray_medium" />

                <!-- Servicios -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Servicios"
                    android:textColor="@color/gray_dark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvServicios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Estacionamiento, Vestuarios, Iluminación LED"
                    android:textColor="@color/gray_medium"
                    android:textSize="14sp" />

                <!-- Botón Ver Mapa -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVerMapa"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="24dp"
                    android:text="Ver en Mapa"
                    android:textColor="@color/primary_green"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:strokeColor="@color/primary_green"
                    app:strokeWidth="2dp"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_location"
                    app:iconGravity="textStart" />

                <!-- ✅ NUEVO: Botón Ver Reseñas -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVerResenas"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="12dp"
                    android:text="Ver Reseñas"
                    android:textColor="@color/primary_green"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:strokeColor="@color/primary_green"
                    app:strokeWidth="2dp"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_star"
                    app:iconGravity="textStart" />

                <!-- Botón Reservar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReservar"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="12dp"
                    android:text="Reservar Ahora"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/primary_green"
                    app:cornerRadius="8dp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
